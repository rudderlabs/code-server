 .monaco-workbench .auxiliarybar.pane-composite-part > .title.has-composite-bar > .title-actions .monaco-action-bar .action-item {
 	max-width: 150px;
 }
+
+/* Replace empty pane text with RudderStack icon */
+.monaco-workbench .part.auxiliarybar .empty-pane-message {
+	font-size: 0;
+	background-image: url('./rudderstack-icon.svg');
+	background-repeat: no-repeat;
+	background-position: center;
+	background-size: 64px 64px;
+	width: 64px;
+	height: 64px;
+	animation: rudderstack-pulse 2s ease-in-out infinite;
+}
+
+@keyframes rudderstack-pulse {
+	0%, 100% { opacity: 0.4; transform: scale(0.95); }
+	50% { opacity: 0.8; transform: scale(1); }
+}
